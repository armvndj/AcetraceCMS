                                <h4 class="card-title">Recent Comments</h4>
                               <div class="chat-box">
                                    <!--chat Row -->
                                    <ul class="chat-list">
                                        <!--chat Row -->
                                       
                                        <!--chat Row -->
                               
<% if @mycase.mycasecomments.any? %>
<%= pluralize @mycase.mycasecomments.size,'Comment' %> so far
<% else %>
Be the first to post discussion
<% end %>
<%= render :partial =>'mycasecomments/mycasecomment',
:collection => @mycase.mycasecomments  %>

     </ul>
                                </div>
                            </div>  


<div class="card-body b-t">
                                <div class="row">
                                    <div class="col-8">
                                  
 		
		<h4>Post Discussion</h4>

              
 <%= form_for([@mycase, @mycase.mycasecomments.build], html: { multipart: true }) do |f| %>
  
	
	<%= image_tag(current_user.avatars_url) if current_user.avatars? %>

    <%= f.text_area :content, placeholder: "Add discussion",class:"publisher-input", class:"form-control b-0"%>
     
     

    <%= f.file_field :attachment , class:"publisher-btn file-group" do %>
    <i class="fa fa-paperclip file-browser"></i>

	<%= f.hidden_field :attachment_cache %>
	 <% end %>
<div class="col-4 text-right">
 <i class="fa fa-paper-plane-o"></i><%= f.submit "send", class:"btn btn-info btn-circle btn-lg"%>
   
  </div>
  <% end %>

	</div>
	
