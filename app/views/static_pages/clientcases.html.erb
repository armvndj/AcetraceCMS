
<% provide( :title, "Legal Case") %>
<p id="notice"><%= notice %></p>



<div class="col-md-12">
            <div class="card">
              


<div class="card-body card-body">


<% if @user_cases.any? %>

<div class="card-header">
                <h5 class="card-title"><strong>Legal Cases</strong></h5>

              </div>


<table class="table">
  <thead>
    <tr>
      <th>Caseno</th>
      <th>Client name</th>
      <th>Subject</th>
      <th>Arrival Date</th>
      <th>Due Date</th>
       <th>Lawfirm</th>
      <th>Show</th>
     
      
     
     
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_cases.each do |mycase| %>
      <tr>
        <td><%= mycase.caseNo %></td>
        <td><%= mycase.client_name %></td>
        <td><%= mycase.subject %></td>
        
        <td><%= mycase.arrival_date %></td>
        <td><%= mycase.due_date %></td>
       
     <td><%= link_to current_user.lawfirm.name, lawfirm_path(current_user.lawfirm.id) %></td>
       
        <td><%= link_to 'Show', mycase %></td>
        
      
      </tr>
    <% end %>
  </tbody>
</table>

<%else%>
<h5>There are no cases associated to you as  client yet!</h5>
<%end%>

</div>
</div>
</div>
