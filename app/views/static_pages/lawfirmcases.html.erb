<% provide( :title, "Lawfirm Cases") %>

<%if current_user.admin? || current_user.adminassistance?%>


      <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">Lawfirm Cases"</h3>
                </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
                <div>
                    <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->

<div class="col-md-12">
            <div class="card">
              


<div class="card-body card-body">


<% if @lawfirm_cases.any? %>

<div class="card-header">
                <h5 class="card-title"><strong>Legal Cases</strong></h5>

              </div>


<table class="table">
  <thead>
    <tr>
      <th>Caseno</th>
      <th>Client name</th>
      <th>Subject</th>
      <th>Arrival Date</th>
      <th>Due Date</th>
       <th>Lawfirm</th>
      <th>Show</th>
      <th>Update</th>
      <th>Delete</th>
     
     
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawfirm_cases.each do |mycase| %>
      <tr>
        <td><%= mycase.caseNo %></td>
        <td><%= mycase.client_name %></td>
        <td><%= mycase.subject %></td>
        
        <td><%= mycase.arrival_date %></td>
        <td><%= mycase.due_date %></td>
       
     <td><%= link_to current_user.lawfirm.name, lawfirm_path(current_user.lawfirm.id) %></td>
        
    <%if current_user.admin?%>
       
        <td><%= link_to 'Show', mycase %></td>
        <td><%= link_to 'Update', edit_mycase_path(mycase) %></td>
        <td><%= link_to 'Delete', mycase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>
<%else%>
<h5>There are no cases created on this lawfirm yet!</h5>
<%end%>


  <a class="btn btn-success" href="/legalcase-new-entry" target="_blank">Add New Case</a>
 <%= link_to 'Back to Dashboard', root_path, class:"btn btn-info" %> |

<%= link_to "Back", :back, class:"btn btn-warning"%> 
</div>
</div>
</div>

<%else%>

<h5>Your are not authorized  to view this page</h5>

 <%end%>
