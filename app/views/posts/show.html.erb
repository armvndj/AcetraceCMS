<% provide( :title, "Forum Post") %>

      <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">Forum Post</h3>
                </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
                <div>
                    <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">


  <%= link_to 'Create Post', new_post_path, class:"btn btn-primary" %>              <!-- Start Page Content -->

  <div class="row">
<div class="col-lg-9">
                        <div class="card">
                            <div class="card-body">
        
                               
                                <h2 class="card-title" style="color:orange;">
   <%= @post.title %></h2>


 <div class="bg-light p-20">
                                <div class="d-flex">
                                    <div class="align-self-center">
                                        <h5 class="m-b-0">By <%=@post.poster.first_name%> <%=@post.poster.last_name%> Lawfirm - <%=@post.poster.lawfirm.name%> - Position - <%=@post.poster.type%> </h5><small>Publised at <%=time_ago_in_words(@post.created_at)%></small></div>
                                    <div class="ml-auto align-self-center">
                                        <h2 class="text-success"></h2></div>
                                </div>
                            </div>


		
                            <div class="card-body" style="font-size:16px">
                            
 
  				<%= @post.body %>
	

	<div id="comments">
   <h2><%=@post.comments.count%> Comments</h2>
   		<%= render :partial =>'comments/comment',
:collection => @post.comments  %>
   	<h3> Reply to thread</h3>
   		<%= render "comments/form"%>
	
<div id="comments">
<div class="comment"><br><br><br>
<%= link_to 'Edit Post', edit_post_path(@post), class:"btn btn-success"%> 
<%= link_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post"}, class:"btn btn-danger" %>
<%= link_to 'Back to Forum', posts_path, class:"btn btn-warning" %>
<%= link_to 'Dashboard', root_url, class:"btn btn-info" %>



</div>
</div>
</div>
</div>
</div>