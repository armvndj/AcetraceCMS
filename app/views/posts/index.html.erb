             <!-- Start Page Content -->

  <div class="row">
<div class="col-lg-9">
                        <div class="card">
                            <div class="card-body">
<% @posts.each do |post| %>

 
                    
                               
                                <h2 class="card-title">
   <%=link_to post.title, post%></h2>


 <div class="bg-light p-20">
                                <div class="d-flex">
                                    <div class="align-self-center">
                                        <h5 class="m-b-0">By <%=post.poster.first_name%> <%=post.poster.last_name%> <%=post.poster.lawfirm.name%></h5><small>Publised at <%=time_ago_in_words(post.created_at)%></small></div>
                                    <div class="ml-auto align-self-center">
                                        <h2 class="text-success"></h2></div>
                                </div>
                            </div>
 <%end%>


<%= will_paginate @posts, :renderer => BootstrapPagination::Rails %>


</div>
</div>
</div>

    

    
  

    </div>
      
