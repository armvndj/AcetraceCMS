
<% provide( :title, "User Update") %>




      <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">User Update</h3>
                </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
                <div>
                    <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">

            
  <div class="row">

   <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                               
                               
                <div class="row">
<div >
<%= form_for(@user, html: { multipart: true }) do |f| %>
 <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
      <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, id: :user_fname, autofocus: true %>
  </div></div>

 <div class="col-md-6">
      <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, id: :user_lname, autofocus: true%>
  </div></div>
 <div class="col-md-6">
      <div class="form-group">
  <label>My Profile Pic</label>
    <%= image_tag(@user.avatars_url) if @user.avatars? %>
    <%= f.file_field :avatars %>
	 <%= f.hidden_field :avatars_cache %>
 
    <label>
      <%= f.check_box :remove_avatars %>
      Remove Profile Pic
    </label>
	</div>
	 </div>
   
<div class="col-md-6">
      <div class="form-group">
    <%= f.label :birthday %>
    <%= f.text_field :birthday, autofocus: true  %>
  </div></div>
  
<div class="col-md-6">
      <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, id: :user_address, autofocus: true  %>
  </div></div>
  
  
<div class="col-md-6">
      <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div></div>


 <div class="col-md-6">
      <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
</div>
 
  <div class="col-md-6">
      <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.number_field :phone_number, id: :user_phone %>
  </div></div>

  <div class="col-md-6">
      <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, id: :user_state %>
  </div></div>

  <div class="col-md-6">
      <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, id: :user_city %>
  </div></div>
  
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-info"  %>
  </div>
<% end %>
 <br>
 <br>
 </p>
 </div>
 </div>
 </div>
 </div>
 </div>



  <br>
  
  

 <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> |

<%= link_to "Back", :back, class:"btn btn-warning"%> 

</div>
</div>

</p>
</div>
</div>
