<% provide( :title, "My Notifications") %>

    
          <div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
    
</div>
    
<div class="col-md-12 panel-grids">
<div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Activities</h3> </div> <div class="panel-body">
        <br />

                        <div class="card">
                            <div class="card-body">
        
                               
                                <h2 class="card-title" style="color:orange;">
    <%= t('notifications.all_notifications') %>
</h2>
     <div class="bg-light p-20">
                                <div class="d-flex">
                                    <div class="align-self-center">
  </div>
  <div>
    <% if @notifications.blank? %>
      <div class="no-records"><%= t('notifications.no_records') %></div>
    <% else %>
      <% @notification_groups.each do |group, notifications| %>
        <div class="notification-group">
          <h6 class="card-title" style="color:orange;"><%= group %></h6>
          </div>
          </div>
          </div>
       <div class="card-body" style="font-size:16px">
          <%= render notifications %>
       
      <% end %>
    <% end %>

  <%= paginate @notifications %>
</div>
 </div>
</div>
  </div>


<div style="float:right;">
<%= link_to 'Back to Dashboard', main_app.root_path, class:"btn btn-info" %> |

